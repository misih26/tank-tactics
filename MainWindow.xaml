<Window x:Class="Tank_Tactics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tank_Tactics"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="Canvas" Background="White" >
        <Image x:Name="Player1Tank" Width="{Binding Path=Player1TankWidth, Mode=OneWay}" Height="{Binding Path=Player1TankHeight, Mode=OneWay}" Canvas.Left="{Binding Path=Player1TankPositionLeft, Mode=OneWay}" Canvas.Top="{Binding Path=Player1TankPositionTop, Mode=OneWay}" Source="{Binding Path=Player1TankImage, Mode=OneWay}"></Image>
        <Image x:Name="Player2Tank" Width="{Binding Path=Player2TankWidth, Mode=OneWay}" Height="{Binding Path=Player2TankHeight, Mode=OneWay}" Canvas.Left="{Binding Path=Player2TankPositionLeft, Mode=OneWay}" Canvas.Top="{Binding Path=Player2TankPositionTop, Mode=OneWay}" Source="{Binding Path=Player2TankImage, Mode=OneWay}"></Image>
    </Canvas>
</Window>
